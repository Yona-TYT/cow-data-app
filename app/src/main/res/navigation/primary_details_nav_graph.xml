<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/view_list_fragment">

    <fragment
        android:id="@+id/view_list_fragment"
        android:name="com.example.cow_data.ViewListFragment"
        android:label="ViewListFragment">
        <action
            android:id="@+id/show_view_detail"
            app:destination="@id/view_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/view_detail_fragment"
        android:name="com.example.cow_data.ViewDetailFragment"
        android:label="view_detail"
        tools:layout="@layout/fragment_view_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>
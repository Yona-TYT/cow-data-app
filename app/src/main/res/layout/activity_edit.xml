<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_loing"
    tools:context=".EditActivity">

    <Spinner
        android:id="@+id/spinType"
        android:layout_width="@dimen/textViewW"
        android:layout_height="25dp"
        android:layout_marginEnd="44dp"
        android:textSize="@dimen/textViewLong"
        app:layout_constraintBottom_toTopOf="@+id/spinEdad"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toEndOf="@+id/txEdit1"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.136" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewH"
        android:layout_marginTop="10dp"
        android:text="Nombre:"
        android:textSize="@dimen/textView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewH"
        android:layout_marginTop="16dp"
        android:text="Color:"
        android:textSize="@dimen/textView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/txEdit1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txEdit1"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewAddH"
        android:layout_marginTop="5dp"
        android:text="@string/textVacio"
        android:textSize="@dimen/textViewLong"
        android:textStyle="bold"
        android:maxLength="35"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txEdit2"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewAddH"
        android:layout_marginTop="5dp"
        android:text="@string/textVacio"
        android:textSize="@dimen/textViewLong"
        android:textStyle="bold"
        android:maxLength="35"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txEdit3"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewAddH"
        android:layout_marginTop="5dp"
        android:text="@string/textVacio"
        android:textSize="@dimen/textViewLong"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txEdit4"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewAddH"
        android:layout_marginTop="5dp"
        android:text="@string/textVacio"
        android:textSize="@dimen/textViewLong"
        android:textStyle="bold"
        android:inputType="number"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="324dp"
        android:layout_height="153dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="@+id/guideline10"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="56dp" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/swDelete"
        android:layout_width="48dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"

        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/buttOK"
        app:layout_constraintVertical_bias="0.707" />

    <Spinner
        android:id="@+id/spinEdad"
        android:layout_width="@dimen/textViewW"
        android:layout_height="25dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="38dp"
        android:textSize="@dimen/textViewLong"
        app:layout_constraintBottom_toTopOf="@+id/bttGall"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txEdit4"
        app:layout_constraintTop_toBottomOf="@+id/txEdit2"
        app:layout_constraintVertical_bias="0.515" />

    <ImageButton
        android:id="@+id/bttGall"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/float_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.713"
        app:layout_constraintStart_toEndOf="@+id/buttOK"
        app:layout_constraintTop_toBottomOf="@+id/txEdit4"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buttDEL"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Eliminar"
        android:textStyle="bold"
        android:visibility="invisible"
        app:backgroundTint="@color/alert_background"
        android:textColor="@color/alert_text"
        app:iconTint="@color/alert_text"
        app:fabSize="mini"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txEdit4"
        app:layout_constraintVertical_bias="0.641" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buttOK"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Guardar"
        android:textStyle="bold"
        android:textColor="@color/inner_button"
        app:iconTint="@color/inner_button"
        app:backgroundTint="@color/float_button"
        app:fabSize="mini"
        app:icon="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txEdit4"
        app:layout_constraintVertical_bias="0.675" />

    <TextView
        android:id="@+id/textViewChip"
        android:layout_width="117dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Modo Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/swDelete"
        app:layout_constraintTop_toBottomOf="@+id/buttOK"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewH"
        android:layout_marginTop="10dp"
        android:text="Edad:"
        android:textSize="@dimen/textView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/txEdit3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/textViewW"
        android:layout_height="@dimen/textViewH"
        android:layout_marginTop="10dp"
        android:text="Litros:"
        android:textSize="@dimen/textView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/txEdit2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout3"
        android:layout_width="374dp"
        android:layout_height="41dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="685dp">

        <!-- Here are the existing layout elements, now wrapped in
             a CoordinatorLayout. -->

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="352dp"
            android:layout_height="75dp"
            android:orientation="vertical">

            <!-- ...Toolbar, other layouts, other elements... -->

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/buttMORE"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginBottom="48dp"
        android:text="otros"
        android:textColor="@color/inner_button"
        app:layout_constraintBottom_toTopOf="@+id/buttDEL"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/txEdit4"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>